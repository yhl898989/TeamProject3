<script>
	$(function(){
		$("#findBtn").click(function(){
			$.ajax({
				url : "/member/pw2",
				type : "POST",
				data : {
					mid : $("#mid").val(),
					memail : $("#memail").val()
				},
				success : function(result) {
					alert(result);
					if (result.length == 22) {
						location.href='../member/loginui';
					}
				},
			})
		});
	})
</script>
